<Window x:Name="MainForm" x:Class="DialogTreeBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DialogTreeBuilder"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas HorizontalAlignment="Left" Height="404" Margin="10,10,0,0" VerticalAlignment="Top" Width="779" MouseDown="Canvas_MouseDown">
        <Canvas Height="404" Width="100" Background="#FF8D8AFF">
            <Button x:Name="Export" Content="Export" Width="80" Height="26" Canvas.Left="10" Canvas.Top="10" Click="Export_Click"/>
            <Button x:Name="Import" Content="Import" Width="80" Height="26" Canvas.Left="10" Canvas.Top="41" Click="Import_Click"/>
            <Button x:Name="Save" Content="Save" Width="80" Height="26" Canvas.Left="10" Canvas.Top="72" Click="Save_Click"/>
            <Button x:Name="Load" Content="Load" Width="80" Height="26" Canvas.Left="10" Canvas.Top="103" Click="Load_Click"/>
        </Canvas>
        <Canvas x:Name="MainCanvas" Height="404" Width="679" Canvas.Left="100" Background="#19000A42" MouseLeftButtonDown="MainCanvas_MouseLeftButtonDown" MouseMove="MainCanvas_MouseMove"/>
    </Canvas>
</Window>
